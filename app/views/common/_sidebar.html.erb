<div class='Sidebar <%= sidebar_state %>'>
  <% if content_for? :sidebar %>
    <div class='Sidebar__supplemental'>
      <%= content_for :sidebar %>
    </div>
  <% end %>

  <a class='Sidebar__toggle'>
    <span></span>
  </a>

  <div class='Sidebar__menu'>
    <%= render 'common/nav' %>

    <hr>

    <% sidebar.each do |artwork| %>
      <%= nav_link artwork.title, artwork_path(artwork.slug), class: 'Sidebar__menu__link' %>
    <% end %>
  </div>
</div>
