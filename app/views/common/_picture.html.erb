<picture
  class='Zoom'
  data-original='<%= image.url %>'
>
  <source
    media='(min-width: <%= image.large.width %>px)'
    srcset='<%= image.large.urls._1x %> 1x, <%= image.large.urls._2x %> 2x'>
  <source
    media='(min-width: <%= image.medium.width %>px)'
    srcset='<%= image.medium.urls._1x %> 1x, <%= image.medium.urls._2x %> 2x'>
  <source
    media='(min-width: <%= image.small.width %>px)'
    srcset='<%= image.small.urls._1x %> 1x, <%= image.small.urls._2x %> 2x'>
  <source
    media='(min-width: <%= image.mobile.width %>px)'
    srcset='<%= image.mobile.urls._1x %> 1x, <%= image.mobile.urls._2x %> 2x'>
  <img
    src='<%= image.medium.urls._1x %>'
    alt='<%= title %>'
    title='<%= title %>'>
</picture>
